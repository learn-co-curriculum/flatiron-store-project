<h1><%= @cart.items.any? && @cart.items.first.category.title %></h1>

<ul>
  <% @cart.items.each do |item| %>
    <li>
      <%= link_to item.title, item_path(item) %> - $<%= item.price.to_f/100  %>
    </li>
    <% if user_signed_in? %>
      <%= form_tag "/line_items/#{item.id}" do %>
        <%= submit_tag "Add to Cart" %>
      <% end %>
    <% end %>
  <% end %>
</ul>

<%= button_to('Checkout', checkout_path) unless cart.status == "submitted" %>
